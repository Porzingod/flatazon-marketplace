<h1>Edit an Item</h1> <br>

<h5>Picture Placeholder</h5> <br>

<%= form_tag('/items/all') do %>
  <%= label_tag :name %>
  <%= text_field_tag "item[name]" %>
  <%= label_tag :price %>
  <%= number_field_tag "item[price]" %>
  <%= label_tag :quantity %>
  <%= number_field_tag "item[quantity]" %>
  <%= label_tag :category %>
  <%= select_tag "item[category_id]", options_from_collection_for_select(Category.all, :id, :name) %>
  <% number_field_tag "item[user_id]", value: session[:user_id] %>
  <%= label_tag :description %>
  <%= text_area_tag :description %>
  <%= submit_tag "Create Item"%>
<% end %>

<%= link_to "Delete Item", delete_category_item_path(@item.category, @item) %>
