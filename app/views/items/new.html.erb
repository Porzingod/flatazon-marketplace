<%= render "/layouts/navbar" %>

<h1>Create Item</h1> <br>

<%= form_for @item, url: items_all_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field "name" %><br>
  <%= f.label :price %>
  <%= f.number_field "price" %><br>
  <%= f.label :quantity %>
  <%= f.number_field "quantity" %><br>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %><br>
  <% f.number_field "user_id", value: session[:user_id] %>
  <%= f.label :image %>
  <%= f.file_field "image" %><br>
  <%= f.label :description %>
  <%= f.text_area "description" %><br>
  <%= f.submit "Create Item"%>
<% end %>
