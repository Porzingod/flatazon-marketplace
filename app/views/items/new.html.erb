<h1>Create Item</h1> <br>

<%= form_for @item, url: items_all_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field "name" %>
  <%= f.label :price %>
  <%= f.number_field "price" %>
  <%= f.label :quantity %>
  <%= f.number_field "quantity" %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <% f.number_field "user_id", value: session[:user_id] %>
  <%= f.label :image %><br>
  <%= f.file_field "image" %>
  <%= label_tag :description %>
  <%= text_area_tag "description" %>
  <%= f.submit "Create Item"%>
<% end %>
