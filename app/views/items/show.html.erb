<h1>Image Placeholder</h1>

<%= image_tag @item.avatar.url %>
<%= image_tag @item.avatar.url(:medium) %>
<%= image_tag @item.avatar.url(:thumb) %>

<div>
  <%= @item.name %><br>
  <%= @item.price_formatted %><br>
  <%= @item.quantity %> Available<br>
</div>

<div class="">
  Add to Cart Placeholder
</div>

<div class="">
  Reviews placeholder
</div>

<%= form_tag add_to_cart_category_item_path(@item.category, @item) do %>
  <%= submit_tag 'Add to Cart'%>
<% end %>
