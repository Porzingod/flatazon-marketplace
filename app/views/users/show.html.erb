<div>
  <ul>
    <li><%= link_to "Big Name Shop", '/items/all' %></li>
    <li><%= link_to "Cart Placeholder", '/cart' %></li>
    <li><%= form_tag '/signout' do %>
      <%= submit_tag 'Sign Out'%>
    <% end %></li>
  </ul>
</div>

<h1><%= @user.username.titleize %>'s Dashboard</h1>
<h2><%= link_to "Shop", '/items/all' %></h2>

<p>Email:<br><%= @user.email %></p>

<div>
  Address: <br>
  <%= @user.addresses[0].street_address_1 %> <br>
  <%= @user.addresses[0].street_address_2 %> <br>
  <%= @user.addresses[0].city %> <br>
  <%= @user.addresses[0].state %> <br>
  <%= @user.addresses[0].zipcode %><br>
</div>

<p>Balance:<br>$<%= @user.format_balance %></p>

<div class="">
  Orders:<br>
    <table>
      <col width="200">
      <col width="300">
      <col width="100">
      <col width="100">
      <col width="100">
      <thead>
       <tr>
         <th colspan="5"></th>
       </tr>
      </thead>
      <tbody>
        <% @user.show_orders.each do |order_group| %>
          <tr>
            <td><strong>Order Date</strong></td>
            <td><strong>Item</strong></td>
            <td><strong>Price</strong></td>
            <td><strong>Quantity</strong></td>
            <td><strong>Subtotal</strong></td>
          </tr>
          <%= order_group.each do |order| %>
            <tr>
              <td><%= order.date_formatted %> </td>
              <td><%= order.item.name %></td>
              <td>$<%= order.item.price_formatted %></td>
              <td><%= 1 %></td>
              <td></td>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
</div>
<%= link_to "Edit Profile", edit_user_path(@user)%>
